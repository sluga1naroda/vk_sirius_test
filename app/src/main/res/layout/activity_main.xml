<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#050B18"
    tools:context=".MainActivity">

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="110dp">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="327dp"
                android:id="@+id/headerImageView"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">
            </ImageView>
            <TextView
                android:id="@+id/descriptionTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                android:textColor="#EEF2FB"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tagsRecyclerView">
            </TextView>
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardView"
                style="@style/CardViewStyle"
                android:theme="@style/Theme.MaterialComponents.Light"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_marginTop="-10dp"
                android:paddingTop="10dp"
                app:cardBackgroundColor="#050B18"
                app:layout_constraintTop_toBottomOf="@+id/headerImageView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardElevation="0dp">
            </com.google.android.material.card.MaterialCardView>
            <ImageView
                android:id="@+id/GameIcon"
                android:layout_width="88dp"
                android:layout_height="95dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="-22dp"
                android:scaleType="fitCenter"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/headerImageView">
            </ImageView>
            <TextView
                android:id="@+id/gameHeaderTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="modernist_bold"
                android:textColor="@color/white"
                android:layout_marginTop="12dp"
                android:layout_marginStart="12dp"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@+id/GameIcon"
                app:layout_constraintTop_toBottomOf="@+id/headerImageView">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/ratingRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="7dp"
                android:maxWidth="50dp"
                app:layout_constraintStart_toEndOf="@+id/GameIcon"
                app:layout_constraintTop_toBottomOf="@+id/gameHeaderTextView">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/numberOfReviews"
                android:fontFamily="modernist_regular"
                android:textColor="#45454D"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:maxWidth="50dp"
                android:textSize="12sp"
                app:layout_constraintTop_toTopOf="@+id/ratingRecyclerView"
                app:layout_constraintBottom_toBottomOf="@+id/ratingRecyclerView"
                app:layout_constraintStart_toEndOf="@+id/ratingRecyclerView">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/tagsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/GameIcon">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/reviewTextView"
                android:fontFamily="modernist_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                android:text="Ratings"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/descriptionTextView">
            </TextView>
            <TextView
                android:id="@+id/ratingTextView"
                android:textColor="@color/white"
                android:fontFamily="modernist_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/reviewTextView"
                android:textSize="48sp">
            </TextView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/secondRatingRecyclerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="26dp"
                android:maxWidth="50dp"
                app:layout_constraintStart_toEndOf="@+id/ratingTextView"
                app:layout_constraintTop_toBottomOf="@+id/reviewTextView">
            </androidx.recyclerview.widget.RecyclerView>
            <TextView
                android:id="@+id/secondNumberOfReviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="modernist_regular"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:textColor="#45454D"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@+id/ratingTextView"
                app:layout_constraintTop_toBottomOf="@+id/secondRatingRecyclerView">
            </TextView>
            <TextView
                android:id="@+id/reviews"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:text="reviews"
                android:fontFamily="modernist_regular"
                android:textColor="#45454D"
                android:textSize="12sp"
                app:layout_constraintStart_toEndOf="@id/secondNumberOfReviews"
                app:layout_constraintTop_toBottomOf="@+id/secondRatingRecyclerView">
            </TextView>
            <View
                android:id="@+id/spacerView"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_marginStart="38dp"
                android:layout_marginTop="38dp"
                android:layout_marginEnd="38dp"
                android:background="#1A1F29"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ratingTextView">
            </View>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/reviewsRecyclerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/spacerView">
            </androidx.recyclerview.widget.RecyclerView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.cardview.widget.CardView
        android:id="@+id/backgroundCard"
        style="@style/CardViewButton"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/backImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_arrow_back_24">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/optionsCard"
        style="@style/CardViewButton"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/optionsImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_baseline_reorder_24"
            tools:ignore="ContentDescription,ImageContrastCheck">
        </ImageView>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/installButtonCard"
        android:layout_width="0dp"
        android:layout_height="64dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardBackgroundColor="#F4D144"
        app:cardCornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/installTextView"
                android:fontFamily="modernist_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Install"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>